@model EmployeeVM

@{
    ViewData["Title"] = "Delete Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<form asp-controller="Employee" asp-action="Delete">
    <div>
        <h4>Employee</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Job Role
            </dt>
            <dd class="col-sm-10">
                @Model.JobRole
            </dd>
            <dt class="col-sm-2">
                Gender
            </dt>
            <dd class="col-sm-10">
                @Model.Gender
            </dd>
            <dt class="col-sm-2">
                First Appointment
            </dt>
            <dd class="col-sm-10">
                @Model.FirstAppointment
            </dd>
            <dt class="col-sm-2">
                Start Date
            </dt>
            <dd class="col-sm-10">
                @Model.StartDate
            </dd>
            <dt class="col-sm-2">
                Notes
            </dt>
            <dd class="col-sm-10">
                @Model.Notes
            </dd>
        </dl>
    </div>
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
